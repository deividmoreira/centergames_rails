<h2>Rotas</h2>

<table>
  <tr>
    <th>Rota</th>
    <th>Ativo</th>
    <th></th>
  </tr>

<% @rota.each do |rotum| %>
  <tr>
    <td><%= rotum.rota %></td>
    <td><%= rotum.ativo %></td>
    <td>
    	<%= link_to 'Mostrar', rotum %>
    	<%= link_to 'Editar', edit_rotum_path(rotum) %>
    	<%= link_to 'Excluir', rotum, confirm: 'Are you sure?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Rotum', new_rotum_path %>
